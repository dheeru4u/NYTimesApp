<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp">



    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="@dimen/column_width"
        android:layout_height="@dimen/column_width"
        android:background="@color/colorCardBackground"
        card_view:cardCornerRadius="2dp">

        <TextView
            android:id="@+id/artHeadLineTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="8"
            android:ellipsize="end"
            android:text="@string/article_text"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="@dimen/card_item_textSize"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:background="@color/colorCardTextBackground"
            android:textColor="@color/colorPrimaryDark" />

    </android.support.v7.widget.CardView>


</LinearLayout>